import os
import shutil
import random
import cv2
import numpy as np
import torch
import torch.nn as nn
import torch.optim as optim

from torchvision import models, transforms, datasets
from torch.utils.data import DataLoader
from tqdm import tqdm



DATASET_A = "/kaggle/input/food-freshness-dataset/Dataset"
DATASET_B = "/kaggle/input/fruits-fresh-and-rotten-for-classification/dataset"

COMBINED = "/kaggle/working/combined_dataset"
os.makedirs(COMBINED, exist_ok=True)



def parse_label(folder):
    folder = folder.lower()
    if "fresh" in folder:
        state = "fresh"
    else:
        state = "rotten"

    fruit = folder.replace("fresh","").replace("rotten","")
    fruit = fruit.replace("apples","apple").replace("bananas","banana")
    fruit = fruit.replace("oranges","orange")
    return fruit, state



def make_dirs(fruit):
    for split in ["train","val","test"]:
        for state in ["fresh","rotten"]:
            os.makedirs(f"{COMBINED}/{split}/{fruit}/{state}", exist_ok=True)



for state in ["Fresh","Rotten"]:
    src = f"{DATASET_A}/{state}"
    for folder in os.listdir(src):
        fruit, freshness = parse_label(folder)
        make_dirs(fruit)

        images = os.listdir(f"{src}/{folder}")
        random.shuffle(images)

        for i,img in enumerate(images):
            if i < 70:
                split = "train"
            elif i < 85:
                split = "val"
            else:
                split = "test"

            shutil.copy(
                f"{src}/{folder}/{img}",
                f"{COMBINED}/{split}/{fruit}/{freshness}/{img}"
            )



for split in ["train","test"]:
    base = f"{DATASET_B}/{split}"
    for folder in os.listdir(base):
        fruit, freshness = parse_label(folder)
        make_dirs(fruit)

        for img in os.listdir(f"{base}/{folder}"):
            shutil.copy(
                f"{base}/{folder}/{img}",
                f"{COMBINED}/{split}/{fruit}/{freshness}/{img}"
            )



train_tf = transforms.Compose([
    transforms.Resize((224,224)),
    transforms.RandomResizedCrop(224,scale=(0.8,1.0)),
    transforms.RandomHorizontalFlip(),
    transforms.RandomRotation(25),
    transforms.ColorJitter(0.4,0.4,0.4),
    transforms.GaussianBlur(3),
    transforms.ToTensor(),
    transforms.Normalize([0.485,0.456,0.406],[0.229,0.224,0.225]),
    transforms.RandomErasing(p=0.3)
])

test_tf = transforms.Compose([
    transforms.Resize((224,224)),
    transforms.ToTensor(),
    transforms.Normalize([0.485,0.456,0.406],[0.229,0.224,0.225])
])



class FruitDataset(torch.utils.data.Dataset):
    def __init__(self, root, transform):
        self.samples = []
        self.transform = transform
        self.fruits = sorted(os.listdir(root))

        for f_idx,fruit in enumerate(self.fruits):
            for s_idx,state in enumerate(["fresh","rotten"]):
                path = f"{root}/{fruit}/{state}"
                for img in os.listdir(path):
                    self.samples.append((path+"/"+img, f_idx, s_idx))

    def __getitem__(self, idx):
        p,f,s = self.samples[idx]
        img = datasets.folder.default_loader(p)
        return self.transform(img), f, s

    def __len__(self):
        return len(self.samples)



train_ds = FruitDataset(f"{COMBINED}/train", train_tf)
val_ds   = FruitDataset(f"{COMBINED}/val", test_tf)
test_ds  = FruitDataset(f"{COMBINED}/test", test_tf)

train_loader = DataLoader(train_ds, batch_size=32, shuffle=True)
val_loader   = DataLoader(val_ds, batch_size=32)
test_loader  = DataLoader(test_ds, batch_size=32)

FRUITS = train_ds.fruits
print("Fruits:", FRUITS)



class FruitChecker(nn.Module):
    def __init__(self, n):
        super().__init__()
        base = models.efficientnet_b3(pretrained=True)
        self.features = base.features
        self.pool = nn.AdaptiveAvgPool2d(1)
        self.fruit_head = nn.Linear(1536, n)
        self.fresh_head = nn.Linear(1536, 2)

    def forward(self,x):
        x = self.features(x)
        x = self.pool(x).flatten(1)
        return self.fruit_head(x), self.fresh_head(x)

model = FruitChecker(len(FRUITS)).cuda()



fruit_loss = nn.CrossEntropyLoss(label_smoothing=0.1)
fresh_loss = nn.CrossEntropyLoss(label_smoothing=0.1)

optimizer = optim.AdamW(model.parameters(), lr=1e-4)
scaler = torch.cuda.amp.GradScaler()



def train(epochs=40, patience=6):
    best = 0
    wait = 0

    for ep in range(epochs):
        model.train()
        correct = 0

        for imgs,f_lbl,s_lbl in tqdm(train_loader):
            imgs,f_lbl,s_lbl = imgs.cuda(), f_lbl.cuda(), s_lbl.cuda()

            optimizer.zero_grad()
            with torch.cuda.amp.autocast():
                f_out,s_out = model(imgs)
                loss = fruit_loss(f_out,f_lbl) + fresh_loss(s_out,s_lbl)

            scaler.scale(loss).backward()
            scaler.step(optimizer)
            scaler.update()

            correct += (s_out.argmax(1)==s_lbl).sum().item()

        acc = correct/len(train_ds)

        model.eval()
        vcorrect = 0
        with torch.no_grad():
            for imgs,f_lbl,s_lbl in val_loader:
                imgs,s_lbl = imgs.cuda(), s_lbl.cuda()
                _,out = model(imgs)
                vcorrect += (out.argmax(1)==s_lbl).sum().item()

        vacc = vcorrect/len(val_ds)
        print(f"Epoch {ep+1} | Train {acc:.4f} | Val {vacc:.4f}")

        if vacc > best:
            best = vacc
            wait = 0
            torch.save(model.state_dict(), "/kaggle/working/fruit_checker_final.pth")
        else:
            wait += 1
            if wait >= patience:
                print("‚èπ Early stopping")
                break

train()



model.load_state_dict(torch.load("/kaggle/working/fruit_checker_final.pth"))
model.eval()

correct = 0
with torch.no_grad():
    for imgs,f_lbl,s_lbl in test_loader:
        imgs,s_lbl = imgs.cuda(), s_lbl.cuda()
        _,out = model(imgs)
        correct += (out.argmax(1)==s_lbl).sum().item()

print("Final Test Accuracy:", round(correct/len(test_ds)*100,2), "%")



















